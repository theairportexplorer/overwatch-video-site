pipeline {
    agent { docker { image 'python:3.7.4' } }
    stages {
        stage('Build') {
            steps {
                sh 'python --version'
                sh 'pip3 install --user -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'make test'
            }
        }
    }
    post {
        always {
            junit '**/test_reports/**/*.xml'
        }
    }
}
