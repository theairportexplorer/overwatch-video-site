pipeline {
    agent { 
        docker {
            image 'python:3.7.4'
            args '-u 0'
        } 
    }
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.7.4'
                }
            }
            steps {
                sh 'python --version'
                sh 'python -m pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'make test'
            }
        }
    }
    post {
        always {
            junit '**/test_reports/**/*.xml'
        }
    }
}
